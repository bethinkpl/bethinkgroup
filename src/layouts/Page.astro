---
interface Props {
	title: string;
}

const { title } = Astro.props;

import DefaultLayout from './DefaultLayout.astro';
---

<DefaultLayout title={title}>
	<div class="max-w-3xl mx-auto px-4">
		<h1 class="text-4xl my-12 font-bold tracking-tight">{title}</h1>
		<slot />
	</div>
</DefaultLayout>
